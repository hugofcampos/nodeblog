extends ../../layout/admin
block content
    h2 Create Post

    div#create-post
      form(name="post", action="admin/posts/#{post._id}/update.html", method="post")
        div
          | Title:
          input(type="text", name="title", value="#{post.title}")

        div
          | Content:
          textarea(name="content") #{post.content}

        div
          | Tags:
          input(name="tags", class="tags", value="#{tags}")

        input(type="submit", value="Submit")
